<%= link_to cocktail_path(cocktail), class: 'item cocktail-badge' do %>
  <div class="cocktail-badge-content">
    <img src="<%= render partial: 'shared/image_tag', locals: { resource: cocktail } %>" alt="" class="ui middle aligned circular image cocktail-avatar-size margin-bot">
    <h4 class="ui center aligned header">
      <div class="sub header">
        <%= cocktail.name %>
      </div>
    </h4>
  </div>
<% end %>

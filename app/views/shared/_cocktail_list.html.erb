<div class="ui very relaxed middle aligned divided selection list">
  <% cocktails.each do |cocktail| %>
    <div class="item">
      <img src="https://source.unsplash.com/random/200x200" alt="" class="ui avatar middle aligned image">
      <div class="content">
        <h4 class="header"><%= cocktail.name %></h4>
        <div class="description"><%= cocktail.description %></div>
      </div>
    </div>
  <% end %>
</div>

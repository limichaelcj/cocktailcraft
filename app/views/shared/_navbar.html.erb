<div id="navbar" class="ui top fixed menu">
  <div class="ui container">
    <div id="navbar-nav-actions" class="left menu">
      <%= link_to root_path, class: 'item' do %>
        <img src="<%= image_path('favicon/favicon.ico') %>" alt="Creative Cocktails">
      <% end %>
      <%= link_to "Cocktails", cocktails_path, class: "#{'active ' if controller_name == 'cocktails'}item" %>
      <%= link_to "Ingredients", ingredients_path, class: "#{'active ' if controller_name == 'ingredients'}item" %>
    </div>
    <div id="navbar-auth-actions" class="right menu">
      <% if user_signed_in? %>
        <%= link_to user_path(current_user), class: "#{'active ' if controller_name == 'users' && @user && @user == current_user}item" do %>
          <i class='user icon'></i>
          <%= current_user.name %>
        <% end %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'item' %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: 'item' %>
        <%= link_to "Sign Up", new_user_registration_path, class: 'item' %>
      <% end %>
    </div>
  </div>
</div>

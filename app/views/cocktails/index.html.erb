<h1 class="sr-only">Cocktails</h1>
<%= render partial: 'shared/site_banner', locals: { header: 'Cocktails' } %>
<div class="ui container">

    <!-- classic -->
    <div class="margin-y">
      <div class="ui basic secondary segment">
        <%= render partial: 'shared/section_header', locals: { text: 'Classic Collection', as: 'h2' } %>
        <%= render partial: 'shared/cocktail_badge_list', locals: { cocktails: @classic } %>
      </div>
    </div>

    <!-- header -->
    <div class="flex-row-divide-middle margin-top">

      <div class="flex_grow">
        <%= render partial: 'shared/search_bar', locals: { action: cocktails_path, classes: 'fill-width', placeholder: 'Search cocktails...' } %>
      </div>

      <!-- actions right floated -->
      <div class="ui right floated horizontal labeled icon menu">
        <%= link_to '#', class: 'item' do %>
          <i class="grey filter icon"></i>
          Filter
        <% end %>

        <%= link_to remix_cocktails_path, class: 'item' do %>
          <i class="purple icon">
            <i class="icons">
              <i class="flask icon"></i>
              <i class="top right corner shuffle icon"></i>
            </i>
          </i>
          Remix
        <% end %>

        <%= link_to new_cocktail_path, class: 'item' do %>
          <i class="yellow icon">
            <i class="icons">
              <i class="flask icon"></i>
              <i class="top right corner add icon"></i>
            </i>
          </i>
          Create
        <% end %>
      </div> <!-- /actions -->
    </div> <!-- /header -->

    <!-- search results -->
    <% if @search_results %>
      <h2 class="ui center aligned horizontal divider header">
        <div class="sub header">Search results for "<strong><em><%= @search_query %></em></strong>"</div>
      </h2>
      <% if @search_results.any? %>
        <%= render partial: 'shared/cocktail_cards', locals: { cocktails: @search_results } %>
      <% else %>
        <div class="ui basic segment">
          <div class="ui warning message">
            <span class="flex-center-middle inline margin-right">
              <i class="circular exclamation icon"></i>
            </span>
            <span>No results found for "<em><%= @search_query %></em>"</span>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- user's cocktail recipes -->
    <% if @user_cocktails %>
      <div class="ui basic purple segment">
        <%= render partial: 'shared/section_header', locals: { text: 'Your Recipes', as: 'h2', attached: true } %>
        <%= render partial: 'shared/cocktail_list', locals: { cocktails: @user_cocktails } %>
      </div>
    <% end %>

    <!-- marked cocktails -->
    <% if @marked_cocktails %>
      <div class="ui basic yellow segment">
        <%= render partial: 'shared/section_header', locals: { text: 'Saved Cocktails', as: 'h2', attached: true } %>
        <%= render partial: 'shared/cocktail_list', locals: { cocktails: @marked_cocktails } %>
      </div>
    <% end %>

    <!-- custom -->
    <div class="ui basic orange segment">
        <%= render partial: 'shared/section_header', locals: { text: 'Community Creations', as: 'h2', attached: true } %>
      <%= render partial: 'shared/cocktail_cards', locals: { cocktails: @custom } %>
    </div>

</div>

<div class="ui very padded basic segment" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cl_image_path(@cocktail.remote_image_path || ENV['DEFAULT_IMAGE_PATH']) %>); background-size: cover; background-position: center;">
  <h1 class="ui center aligned icon inverted header" style="opacity: 0.9">
    <i class="circular glass martini icon"></i>
    <%= @cocktail.name %>
  </h1>
</div>
<div class="ui container">
  <div class="ui very padded text segment">
    <h1 class="ui header">
      <%= @cocktail.name %>
      <div class="sub header">
        <%= @cocktail.user != nil ? "Created by #{@cocktail.user.name}" : "Classic Collection" %>
      </div>
    </h1>
    <div class="ui divider"></div>
    <p>
      <%= @cocktail.description %>
    </p>
  </div>
</div>

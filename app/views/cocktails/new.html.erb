<div class="ui container">

  <div class="ui basic fluid segment">
    <div class="flex-col-middle margin-top padding-top">
      <i class="huge icons">
        <i class="circular flask icon"></i>
        <i class="top right corner inverted add icon"></i>
      </i>
      <h1 class="ui center aligned header">
        <em>Create A Cocktail</em>
      </h1>
    </div>
  </div>

  <div class="ui very padded purple segment">

    <!-- middle -->
    <div class="device-center">
      <!-- flash messages -->
      <% unless @cocktail.errors.empty? %>
      <div class="ui error message">
        <i class="close icon"></i>
        <div class="header">There were some errors with your submission</div>
        <ul class="list">
          <% @cocktail.errors.full_messages.each do |err| %>
          <li><%= err %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <!-- form -->
      <%= simple_form_for @cocktail, html: { id: 'cocktail-form', class: 'ui form' } do |f| %>
      <%= f.input :name, wrapper_html: { class: 'sixteen wide field' } %>
      <%= f.input :description, as: :text, wrapper_html: { class: 'field' } %>
      <div class="field">
        <label for="template">Template</label>
        <div class="ui fluid search selection dropdown">
          <input type="hidden" name="template">
          <i class="dropdown icon"></i>
          <div class="default text">[None]</div>
          <% unless @templates.nil? %>
          <div class="menu">
            <% @templates.each do |t| %>
            <div class="item" data-value="<%= t.id %>">
              <%= t.name %>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="flex-row">
        <%= f.input :photo, as: :file, wrapper_html: { class: 'field flex_fluid' }, input_html: { id: 'cocktail_photo', class: 'image-upload-preview' } %>
        <%= f.input :photo_cache, as: :hidden %>
        <div id="cocktail_photo-preview" class="img-sq-xs-circle flex_static margin-all hide"> </div>
      </div>
      <%= f.submit class: 'ui primary button', style: 'margin-top:30px;' %>
      <% end %>
    </div>

  </div> <!-- /segment -->

</div>

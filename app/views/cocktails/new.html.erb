
<div class="cover-image padding-y2" <%= render_bg_img(cl_image_path('bar.jpg'))%>>
  <div class="flex-col-middle padding-y">
    <i class="huge icons">
      <i class="inverted flask icon"></i>
      <i class="top right corner inverted add icon"></i>
    </i>
    <h1 class="ui center aligned inverted header">
      <em>Create A Cocktail</em>
    </h1>
  </div>
</div>

<div class="ui container">

  <div class="ui very padded secondary purple segment force--up">

    <!-- middle -->
    <div class="device-center">
      <!-- flash messages -->
      <% unless @cocktail.errors.empty? %>
      <div class="ui error message">
        <i class="close icon"></i>
        <div class="header">There were some errors with your submission</div>
        <ul class="list">
          <% @cocktail.errors.full_messages.each do |err| %>
          <li><%= err %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <!-- form -->
      <%= simple_form_for @cocktail, html: { id: 'cocktail-form', class: 'ui form' } do |f| %>
        <%= f.input :name, wrapper_html: { class: 'sixteen wide field validate--empty' } %>
        <%= f.input :description, as: :text, wrapper_html: { class: 'field' }, input_html: { placeholder: 'Introduce your cocktail with a brief description...'} %>
        <div class="flex-row">
          <%= f.input :photo, as: :file, wrapper_html: { class: 'field flex_fluid' }, input_html: { id: 'cocktail_photo', class: 'image-upload-preview' } %>
          <%= f.input :photo_cache, as: :hidden %>
          <div id="cocktail_photo-preview" class="img-sq-xs-circle flex_static margin-all hide"> </div>
        </div>
        <%= f.submit class: 'ui primary button', style: 'margin-top:30px;' %>
      <% end %>
    </div>

  </div> <!-- /segment -->

</div>

<%= render partial: 'shared/site_banner', locals: { home: true, logo: true, size: 'sm', vertical: true } %>

<div class="ui fluid home-content">
  <div class="ui container homepage-container">

    <!-- user actions -->

    <section>
      <div class="ui three column middle aligned stackable grid container">
        <% @actions.each do |action| %>
        <div class="column">
          <div class="ui basic middle aligned icon message home-user-action">
            <i class="<%= action[:icon] %> icon"></i>
            <div class="content">
              <div class="header"><%= action[:name] %></div>
              <p><%= action[:text] %></p>
            </div>
            <% if action[:wip] == true %>
              <div class="floating ui yellow label no-wrap" style="transform:translate(-70%, 0)">
                Coming soon!
              </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </section>

    <!-- featured cocktails -->

    <section>
      <div class='padding-y'>
        <h3 class="ui horizontal divider header">Featured Cocktails</h3>
      </div>
      <div class="ui basic segment">
        <%= render partial: 'shared/cocktail_cards', locals: { cocktails: @top_rated } %>
      </div>
    </section>

    <!-- popular drinks -->

    <section>
      <div class='padding-y'>
        <h3 class="ui horizontal divider header">Popular Drinks</h3>
      </div>
      <div class="ui basic segment">
        <%= render partial: 'shared/cocktail_cards', locals: { cocktails: @popular } %>
      </div>
    </section>

  </div>
</div>

<div class="ui fluid home-banner cover-image">
  <!-- Banner image contents -->
  <div class="flex-col-center-middle fill-height">
    <div class="img-sq-sm-circle img-filter--invert home-banner-logo">
      <img src="<%= image_path('favicon/android-chrome-512x512.png') %>" alt="Creative Cocktails">
    </div>
    <h1 class="font--display--white home-banner-header">Creative Cocktails</h1>
  </div>
</div>

<div class="ui fluid home-content">
  <div class="ui container">

    <!-- user actions -->

    <section>
      <div class="ui three column middle aligned stackable grid container">
        <% @actions.each do |action| %>
        <div class="column">
          <div class="ui basic middle aligned icon message home-user-action">
            <i class="<%= action[:icon] %> icon"></i>
            <div class="content">
              <div class="header"><%= action[:name] %></div>
              <p><%= action[:text] %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </section>

    <!-- featured cocktails -->

    <section>
      <h3 class="ui horizontal divider header">Featured Cocktails</h3>
      <div class="ui four column middle aligned doubling stackable grid">
        <% 8.times do %>
          <div class="column">
            <div class="ui segment">
              <div class="ui placeholder">
                <div class="header">
                  <div class="very short line"></div>
                  <div class="medium line"></div>
                </div>
                <div class="paragraph">
                  <div class="short line"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- popular drinks -->

    <section>
      <h3 class="ui horizontal divider header">Popular Drinks</h3>
      <div class="ui four column middle aligned doubling stackable grid">
        <% 8.times do %>
          <div class="column">
            <div class="ui segment">
              <div class="ui placeholder">
                <div class="header">
                  <div class="very short line"></div>
                  <div class="medium line"></div>
                </div>
                <div class="paragraph">
                  <div class="short line"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

  </div>
</div>
